{{>login}}
<header class='constainer text-center'>
  <div class='row bg-dark text-white'>
    <h1 class='h1 --bs-body-color col-3 p-2 mx-5 mb-4 bg-info-subtle text-dark rounded-3 header'>
      The Tech Blog
    </h1>
  </div>
</header>
<main class='container container-fluid mt-5'>
  {{#each blogposts}}
    <div class='card bg-info-subtle m-3 rounded-3'>
      <h2 class='card-header bg-dark text-white'>
        {{name}}
      </h2>
      <div class='card-body'>
        <div class='row align-center mb-5'>

          <div class='col-md-12'>
            <p class="fs-5">{{description}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</main>