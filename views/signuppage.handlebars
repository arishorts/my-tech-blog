<header class='constainer text-center'>
  <div class='row bg-dark text-white'>
    <h1
      class='h1 --bs-body-color col-4 p-2 mx-5 mb-4 bg-info-subtle text-dark rounded-3 header'
    >The Tech Blog</h1>
  </div>
</header>

<main class='container container-fluid mt-5'>
  <div class='card bg-info-subtle m-3 rounded-3'>
    <header class='card-header bg-dark text-white'>
      <div class='row'>
        <h2 class='h2 col-9'>
          Sign Up
        </h2>
      </div>
    </header>
    <div class='card-body'>
      <div class='row align-center p-1'>
        <form class='form signup-form'>
          <div class='form-group m-2'>
            <label for='name-signup'>Name:</label>
            <input
              class='form-control'
              type='text'
              id='name-signup'
              placeholder='Enter name'
            />
          </div>

          <div class='form-group m-2'>
            <label for='email-signup'>Email:</label>
            <input
              class='form-control'
              type='text'
              id='email-signup'
              aria-describedby='emailHelp'
              placeholder='Enter email'
            />
          </div>

          <div class='form-group m-2'>
            <label for='password-signup'>Password:</label>
            <input
              class='form-control'
              type='password'
              id='password-signup'
              placeholder='Password'
            />
          </div>

          <div class='row justify-content-center align-items-center'>
            <div class='form-group col-2 my-3 text-center'>
              <button
                class='btn btn-primary custom-btn'
                type='submit'
              >Submit</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</main>

<script src='/js/signup.js'></script>