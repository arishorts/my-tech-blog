<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>User Registry</title>
    {{! <link rel='stylesheet' href='/css/jass.css' /> }}
    <link rel='stylesheet' href='/css/styles.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp'
      crossorigin='anonymous'
    />
  </head>
  <body class='bg-info-subtle'>
    <nav class='navbar navbar-expand p-0 m-0'>
      <div class='container-fluid bg-dark text-white'>
        <a class='navbar-brand text-white fs-2' href='/'>TB</a>
        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item'>
              <a class='nav-link text-white fs-4' href='/'>Home</a>
            </li>
            {{#if loggedIn}}
              <li class='nav-item'>
                <a
                  class='nav-link text-white fs-4'
                  href='/dashboard/{{user_id}}'
                >Dashboard</a>
              </li>
              <li class='nav-item'>
                <button
                  class='nav-link text-white fs-4'
                  id='logout'
                >Logout</button>
              </li>
            {{/if}}
            {{#unless loggedIn}}
              <li class='nav-item'>
                <a
                  href='/login'
                  class='nav-link text-white fs-4'
                  id='login'
                >Login</a>
              </li>
            {{/unless}}
          </ul>
        </div>
      </div>
    </nav>

    {{{body}}}
  </body>
  {{#if loggedIn}}
    <script src='/js/logout.js'></script>
  {{/if}}
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N'
    crossorigin='anonymous'
  ></script>
</html>